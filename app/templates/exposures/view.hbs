{{left-nav-exposures}}

<div id="exposures-list" class='exposures-list-container'>
  <div class='exposures-list-heading'>
    <h3>Exposures</h3>
  </div>
  <table id='exposures-table' class='table table-striped'>
    <thead>
      <tr>
        {{!-- <th id='starred-heading'>Starred</th> --}}
        <th id='exposures-id-heading' {{action 'sortTable'}}>ID</th>
        <th id='exposures-date-created-heading'>Date Created</th>
        <th id='exposures-action-heading'>Action</th>
        <th id='exposures-prediction-heading'>Predicted Fear</th>
        <th id='exposures-actual-heading'>Actual Fear</th>
        <th id='exposures-satisfaction-heading'>Satisfaction</th>
        <th id='exposures-update-heading'>Update</th>
        <th id='exposures-delete-heading'>Delete</th>
      </tr>
    </thead>
    <tbody id='exposures-table-body'>
    {{#each model as |exposure|}}
      <tr class="file-row" data-id="{{exposure.id}}">
      {{!-- <td>{{journalEntry.starred}}</td> --}}
      <td>{{exposure.id}}</td>
      <td>{{exposure.updated_at}}</td>
      <td>{{exposure.action}}</td>
      <td>{{exposure.prediction}}</td>
      <td>{{exposure.actual}}</td>
      <td>{{exposure.satisfaction}}</td>
      <td><button class='btn-info' {{action "updateEntry"}}>Update</button></td>
      <td><button class='btn-danger'{{action "deleteEntry"}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
  </table>
</div>
