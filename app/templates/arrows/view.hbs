{{left-nav-arrows}}

<div id="arrows-list" class='arrows-list-container'>
  <div class='text-center input-page-heading'>
    <h2>Downward Arrow Technique Entries</h2>
  </div>
  <table id='arrows-table' class='table table-striped'>
    <thead>
      <tr>
        {{!-- <th id='starred-heading'>Starred</th> --}}
        <th id='arrows-id-heading' class='table-heading' {{action 'sortTableById'}}>ID</th>
        <th id='arrows-date-created-heading' class='table-heading' {{action 'sortTableByDate'}}>Last Updated</th>
        <th id='arrows-event-heading' class='table-heading' {{action 'sortTableByAutothought'}}>First Automatic Thought</th>
        <th id='arrows-update-heading' class='table-heading'>Update</th>
        <th id='arrows-delete-heading' class='table-heading'>Delete</th>
      </tr>
    </thead>
    <tbody id='arrows-table-body'>
    {{#each model as |downward_arrow|}}
      <tr class="file-row" data-id="{{downward_arrow.id}}">
      {{!-- <td>{{journalEntry.starred}}</td> --}}
      <td class='text-center'>{{downward_arrow.id}}</td>
      <td class='text-center'>{{downward_arrow.updated_at}}</td>
      <td class='text-center'>{{downward_arrow.autothought1}}</td>
      <td class='text-center'><button class='btn-info' {{action "updateEntry"}}>Update</button></td>
      <td class='text-center'><button class='btn-danger'{{action "deleteEntry"}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
  </table>
</div>
