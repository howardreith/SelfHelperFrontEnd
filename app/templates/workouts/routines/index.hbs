{{left-nav-workouts}}

<div id="routines-list" class='routines-list-container text-center'>
  <div class='text-center input-page-heading'>
    <h2>Workout Routines</h2>
  </div>
  <button type="submit" class="btn btn-primary" {{action "createRoutinesEntry"}}>
    New Routine
  </button>
  <table id='routines-table' class='table table-striped'>
    <thead>
      <tr>
        {{!-- <th id='starred-heading'>Starred</th> --}}
        <th class='table-heading' id='include' {{action 'sortTableByInclude'}}>Include?</th>
        <th class='table-heading' id='id-heading' {{action 'sortTableById'}}>ID</th>
        <th class='table-heading' id='name-heading' {{action 'sortTableByName'}}>Name</th>
        <th class='table-heading' id='update-heading'>Update</th>
        <th class='table-heading' id='delete-heading'>Delete</th>
      </tr>
    </thead>
    <tbody id='routines-table-body'>
    {{#each model as |routinesEntry|}}
      <tr class="file-row" data-id="{{routinesEntry.id}}">
      <td><input type="checkbox" checked={{routinesEntry.include}} {{action 'checkEntry'}}></td>

      {{!-- {{#if routinesEntry.include}}checked{{/if}} --}}
      <td>{{routinesEntry.id}}</td>
      <td>{{routinesEntry.name}}</td>
      <td><button class='btn-info' {{action "updateEntry"}}>Update</button></td>
      <td><button class='btn-danger'{{action "deleteEntry"}}>Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
  </table>
</div>
